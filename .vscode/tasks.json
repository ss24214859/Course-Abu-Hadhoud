{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build Bank Project", // اسم جديد أكثر وضوحًا لمهمة البناء
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe", // مسار g++.exe الخاص بك
            "args": [
                "-fdiagnostics-color=always",
                "-g", // مهم لتمكين التصحيح
                // هنا نحدد جميع ملفات .cpp في مشروعك
                "${workspaceFolder}\\BankUi.cpp", // ملف الـ main الخاص بك
                // إذا كان لديك أي ملفات .cpp أخرى (مثل clsInputValidate.cpp، clsUtil.cpp)، أضفها هنا
                // مثال: "${workspaceFolder}\\src\\another_source_file.cpp",
                "-o", // خيار تحديد اسم ومسار الملف التنفيذي الناتج
                "${workspaceFolder}\\build\\Debug\\outDebug" // المسار الذي يتوقعه launch.json
            ],
            "options": {
                "cwd": "${workspaceFolder}" // تأكد من أن الدليل الحالي هو مجلد المشروع بالكامل
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build task for the entire Bank Project."
        }
    ],
    "version": "2.0.0"
}