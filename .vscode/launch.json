{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": true,
      "cwd": ".",
      "program": "${workspaceFolder}\\build\\Debug\\outDebug", // تأكد من هذا المسار أيضاً، الأفضل استخدام ${workspaceFolder}
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "Build Bank Project", // **هذا هو التغيير الضروري هنا**
      "console": "integratedTerminal"
    }
  ]
}